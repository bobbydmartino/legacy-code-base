<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>{{ title or "My Blog" }}</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="{{ '/style.css' | url }}">
</head>
<body>
  <header>
    <nav>
      <a href="{{ '/' | url }}">Home</a> |
      <a href="{{ '/posts/' | url }}">Posts</a>
